# If statments
age = 18
if age >= 18:
    print("you can vote")
print("after if")

# IF ELIF ELSE
age = 55
if age >= 55:
    print("one")
    ticket_price = 5
elif age >= 18 and age < 25:
    print("two")
    ticket_price = 10
elif age < 18:
    print("four")
    ticket_price = 0
else:
    print("three")
    ticket_price = 15

print(ticket_price)
# ELIF meanins if all else above is flase then check this
# ELSE meanins if everything is flase them just do this

# AND/OR
# 6 and taller than 100cm
age = 6
height = 100
if age >= 6 and height >= 100:
    print("you can ride")
elif age < 6 or height < 100:
    print("you cannot ride")
