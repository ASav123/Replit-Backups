team_a_points = 25
team_a_wins = 16

team_b_points = 20
team_b_wins = 16

if team_a_points > team_b_points:
    print("Team A wins!")
    team_a_wins += 1
elif team_b_points > team_a_points:
    print("Team B wins!")
    team_b_wins += 1
else:
    print("Tie.")

if team_a_wins > team_b_wins:
    print("Team A has more wins than Team B.")
elif team_b_wins > team_a_wins:
    print("Team B has more wins than Team A.")
else:
    print("Both Teams A and B have the same number of wins.")




age = 100
fav_num = 20
name = "Dave"
friend = True
if friend is True:
    if name.lower() == "dave" and fav_num >= 10 or name.lower() == "dave" and age == 18:
        print("Whats up Dave we have things in commun")
    elif name.lower() == "dave" and age <10:
        print("sup")
    elif name.lower() == "dave":
        print("Dave is that you?")
    elif age == 18 and fav_num % 5 == 0:
        print("We are friends now")
    else:
        print("No")
elif friend is False and name.lower() == "dave":
    print("You can be my friend.")
else:
    print("Bye")


